<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-md-3">
      <h1>Modify a performance</h1>
      <%= simple_form_for [@profile, @performance] do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :image_url %>
        <%= f.input :hour_price %>
        <%= f.input :category_id, collection: Category.all %>
        <%= f.submit "validate changes", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>